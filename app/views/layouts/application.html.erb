<!DOCTYPE html>
<html>
  <head>
    <title>Members Only</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="header">
      <h1 class="main-heading">Members Only</h1>
      <div class="buttons">
        <% if user_signed_in? %>
          <%= button_to(
            "Log Out",
            destroy_user_session_path,
            class:"link-to",
            method: :delete
          ) %>
          <span class="username"><%= current_user.username %></span>
        <% else %>
          <%= link_to(
            "Sign Up",
            new_user_registration_path,
            class:"link-to"
          ) %>
          <span style="padding-right: 32px;"></span>
          <%= link_to(
            "Log In",
            user_session_path,
            class:"link-to"
          ) %>
        <% end %>
      </div>
    </div>
    <% flash.each do |type, msg| %>
      <div class="<%= type %>" style="color: green">
        <%= msg %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
